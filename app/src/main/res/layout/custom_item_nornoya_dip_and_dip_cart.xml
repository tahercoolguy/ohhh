<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/my_shadow"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"

    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:layout_weight="1"
         android:orientation="horizontal">

        <ImageView
            android:id="@+id/nornoya_img"
            android:layout_width="60dp"
             android:layout_height="60dp"

            android:src="@drawable/nornoya"></ImageView>

        <TextView
            android:id="@+id/nornoya_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/semi_bold"

               android:layout_weight="111"
            android:text="Nornoyau"
             android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>


        <TextView
            android:id="@+id/checkout"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_white_rectangle"
            android:backgroundTint="@color/colorPrimary"

            android:padding="15dp"
            android:gravity="center"
            android:text="@string/checkout"
            android:textColor="@color/white"></TextView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/nornoya_sub_item"
          android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>