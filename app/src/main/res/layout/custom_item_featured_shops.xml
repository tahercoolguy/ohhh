<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/shop_cake_RL"
        android:layout_width="300dp"
         android:layout_height="match_parent"
        app:cardCornerRadius="13dp"
         android:background="@drawable/rounded_rectangle_white_account"
         android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cake_shop_img1"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:src="@drawable/shop_cake_img">

            </ImageView>

            <LinearLayout
                android:id="@+id/like_LL"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="255dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_rounded_primary_color_selector"
                android:elevation="11dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_herrrt">

                </ImageView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner_white_rating_bg"
                android:gravity="center"
                android:orientation="horizontal"
                app:cardCornerRadius="25dp">

                <TextView
                    android:id="@+id/rating_starTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/semi_bold"

                    android:gravity="center"
                    android:text="4.5"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold"></TextView>

                <ImageView
                    android:id="@+id/star"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/ic_rating_star"></ImageView>

                <TextView
                    android:id="@+id/rating_count_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="5dp"
                    android:text="(25+)"
                    android:textSize="12dp"></TextView>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/dip_and_dip_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="145dp"
            android:text="McDonald's"

            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="170dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dlivery_Img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_delivery_boy">

            </ImageView>

            <TextView
                android:id="@+id/free_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="Free delivery">

            </TextView>

            <ImageView
                android:id="@+id/timer_delivery"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_time">

            </ImageView>

            <TextView
                android:id="@+id/deliver_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="10-15 mins">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp">


            <TextView
                android:id="@+id/desert_Btn"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rectangle_white_grey_border"
                android:backgroundTint="@color/grey_light"
                android:gravity="center"
                android:text="Dessert">

            </TextView>


            <TextView
                android:id="@+id/kuwait_Btn"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/rectangle_white_grey_border"
                android:backgroundTint="@color/grey_light"
                android:gravity="center"

                android:text="Kuwaiti">

            </TextView>


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>