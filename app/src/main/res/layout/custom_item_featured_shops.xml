<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:orientation="vertical">



    <RelativeLayout
        android:id="@+id/shop_cake_RL"
        android:layout_width="300dp"
         android:layout_height="match_parent"
        app:cardCornerRadius="13dp"
         android:background="@drawable/my_shadow"
         android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="20dp">

            </com.makeramen.roundedimageview.RoundedImageView>

            <LinearLayout
                android:id="@+id/like_LL"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="255dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_rounded_primary_color_selector"
                android:elevation="11dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_herrrt">

                </ImageView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner_white_rating_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rating_starTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:fontFamily="@font/semi_bold"
                    android:text="4.5"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/star"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/ic_rating_star"></ImageView>

                <TextView
                    android:id="@+id/rating_count_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="(25+)"
                    android:textColor="@color/black"
                    android:textSize="12dp"></TextView>

            </RelativeLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/text1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="145dp"
            android:fontFamily="@font/semi_bold"
            android:text="McDonald's"

            android:textColor="@color/black"
            android:textSize="18dp"></TextView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="175dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dlivery_Img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_delivery_boy">

            </ImageView>

            <TextView
                android:id="@+id/free_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="Free delivery">

            </TextView>

            <ImageView
                android:id="@+id/timer_delivery"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_time">

            </ImageView>

            <TextView
                android:id="@+id/deliver_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="10-15 mins">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="195dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp">


            <TextView
                android:id="@+id/desert_Btn"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rectangle_white_grey_border"
                android:backgroundTint="@color/grey_light"
                android:gravity="center"
                android:text="Dessert">

            </TextView>


            <TextView
                android:id="@+id/kuwait_Btn"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/rectangle_white_grey_border"
                android:backgroundTint="@color/grey_light"
                android:gravity="center"

                android:text="Kuwaiti">

            </TextView>


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>