<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subcategory_item_LL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:adjustViewBounds="true"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    app:riv_corner_radius="12dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:background="@drawable/rounded_corner_white">


        <TextView
            android:id="@+id/pieces_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Assortment of pieces"
            android:textColor="@color/black"></TextView>


        <TextView
            android:id="@+id/pastries_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_weight="13"
            android:text="Pasties"
            android:textColor="@color/black"></TextView>


        <TextView
            android:id="@+id/price_kwd_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:text="10.000 KD"
            android:textColor="@color/colorPrimary"></TextView>

        <ImageView
            android:id="@+id/cake_Img"
            android:layout_width="93dp"
            android:layout_height="95dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/feed_cake_1"></ImageView>

    </RelativeLayout>


</LinearLayout>


