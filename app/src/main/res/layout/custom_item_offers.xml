<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/shop_cake_CardView"
        android:layout_width="160dp"
        app:cardCornerRadius="15dp"
         android:layout_height="220dp"
        android:background="@drawable/rounded_rectangle_white_account"
         android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/offer_chocklate_img_1"
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:scaleType="fitXY"
                android:src="@drawable/ofer_cake_img_1">

            </ImageView>
            <TextView
                android:id="@+id/offer_10_percent"
                android:layout_width="50dp"
                android:background="@drawable/rounded_rectangle_white"
                android:layout_height="20dp"
                android:gravity="center"
                 android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="10% Off"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary"></TextView>
            <LinearLayout
                android:id="@+id/like_LL"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="115dp"

                android:layout_marginTop="10dp"
                android:background="@drawable/button_rounded_primary_color_selector"
                android:elevation="11dp">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_herrrt">

                </ImageView>

            </LinearLayout>

            <TextView
                android:id="@+id/offer_chocklate_cake_txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Chocolate Cake"
                android:textColor="@color/black"></TextView>

        </RelativeLayout>



    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"></View>

</LinearLayout>