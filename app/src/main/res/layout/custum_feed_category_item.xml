<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/feed_cakeLinearLL"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:adjustViewBounds="true"
    android:background="@color/white"
     app:riv_corner_radius="12dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.makeramen.roundedimageview.RoundedImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/feed_category_img"
         android:src="@drawable/feed_cake_1"
        android:cropToPadding="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        android:adjustViewBounds="true"
        app:riv_corner_radius="12dp"
        android:layout_height="wrap_content">



    </com.makeramen.roundedimageview.RoundedImageView>

    <TextView
        android:id="@+id/pieces_Txt"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:text="Assortment of pieces"
        android:layout_height="wrap_content"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pastries_txt"
            android:layout_width="wrap_content"
            android:text="Pasties"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="13"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/price_kwd_Txt"
            android:layout_width="wrap_content"
            android:text="10.000 KD"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>


</LinearLayout>
