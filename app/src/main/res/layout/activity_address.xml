<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity.Address_Activity">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/back_saved_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="100dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:background="@drawable/my_shadow_back_button"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_shadow_back_button"></ImageView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_back_back"></ImageView>

                </RelativeLayout>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:fontFamily="@font/semi_bold"


                android:text="@string/address"
                android:textColor="@color/black"
                android:textSize="18dp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_circle_address_orange"></ImageView>

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/grey"></LinearLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_circle_brown_unselected"></ImageView>

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/grey"></LinearLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_circle_brown_unselected"></ImageView>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/select_delivery_address"
            android:fontFamily="@font/semi_bold"

            android:textColor="@color/black"
            android:textSize="20sp"></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/semi_bold"

            android:text="@string/select_delivery_time"
            android:textColor="@color/black"
            android:textSize="20sp"></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:id="@+id/recycleAddress"></androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/now_RL"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
             android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/my_shadow">

            <ImageView
                android:id="@+id/nowImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"

                android:layout_marginTop="15dp"
                 android:src="@drawable/ic_now_clock"></ImageView>

            <TextView
                android:id="@+id/nowTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:text="@string/now"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold">

            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/now_RL2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginRight="20dp"
            android:background="@drawable/my_shadow">

            <ImageView
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerInParent="true"
                 android:layout_alignParentStart="true"

                android:layout_marginTop="15dp"
                android:src="@drawable/ic_now_clock_white"></ImageView>

            <TextView
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:text="@string/now"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/customize_RL"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/my_shadow">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_customize_pencil"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"                android:layout_marginTop="15dp"
                android:text="@string/customize"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17dp">

            </TextView>


            <TextView
                android:id="@+id/datetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="50dp"></TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/proceed_to_payment_Btn"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="80dp"
            android:layout_height="wrap_content"
              android:layout_gravity="center"
            android:layout_marginVertical="40dp"
             android:background="@drawable/rounded_corner_primary_colour"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/proceed_to_payment"
            android:textColor="@color/white"
            ></TextView>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>
</LinearLayout>
