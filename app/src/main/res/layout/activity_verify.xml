<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/circle_white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.VerifyActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="-84dp"
            android:src="@drawable/circle_big_accent">

        </ImageView>

        <ImageView
            android:id="@+id/back_verification_otp_page_Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-29dp"
            android:background="@drawable/ic_back_back_otp"
            android:elevation="10dp"></ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="-84dp"
            android:src="@drawable/circle_big_accent">

        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-84dp"
            android:layout_marginRight="-80dp"
            android:src="@drawable/circle_big_primary">

        </ImageView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-45dp"
            android:layout_marginTop="-5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_small_primary"></ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/circle_small_centre">


            </ImageView>


        </RelativeLayout>




    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="30dp"
        android:text="@string/verification_code"
         android:textColor="@color/black"
        android:textSize="30dp"
        >

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
         android:layout_marginTop="10dp"
        android:text="@string/please_type_the_verification_code_sent">

    </TextView>

    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otp_view"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        app:bar_active_color="@color/colorPrimary"
        app:bar_height="2dp"
        app:box_margin_right="20dp"
        app:height="70dp"
         app:length="4"
        app:otp_box_background="@drawable/otp_bg_rectangle_white_grey_border"
        app:otp_box_background_active="@drawable/otp_bg_rectangle_white_orange_border"

        app:otp_box_background_success="@drawable/otp_bg_rectangle_white_orange_border"
        app:otp_text_size="30dp"
        app:width="70dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
         android:text="@string/i_didnot_receive_a_code"
        android:textColor="#5C5959">

    </TextView>

    <TextView
        android:id="@+id/please_resend_Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="3dp"

         android:text="@string/please_resend"
        android:textColor="@color/colorPrimary"></TextView>


    <TextView
        android:id="@+id/submit_Txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rounded_corner_primary_colour"
         android:gravity="center"
        android:textSize="@dimen/text_size_title"
        android:padding="15dp"
        android:text="@string/submit"
        android:textColor="@color/white"
       ></TextView>


</LinearLayout>