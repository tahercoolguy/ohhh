<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
     android:orientation="vertical">



    <RelativeLayout
        android:id="@+id/shop_cake_Rl"
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:background="@drawable/my_shadow"
        android:orientation="horizontal"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/cake_shop_img1111"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="20dp">

            </com.makeramen.roundedimageview.RoundedImageView>


            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner_white_rating_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rating_starTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:fontFamily="@font/semi_bold"
                    android:text="4.5"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/star"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/ic_rating_star"></ImageView>

                <TextView
                    android:id="@+id/rating_count_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="(25+)"
                    android:textColor="@color/black"
                    android:textSize="12dp"></TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/like_LL"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_rounded_primary_color_selector"
                android:elevation="11dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_herrrt">

                </ImageView>

            </RelativeLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/dip_and_dip_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="70dp"
            android:fontFamily="@font/semi_bold"
            android:text="Dip n Dip"

            android:textColor="@color/black"
            android:textSize="18dp"></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="47dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dlivery_Img"
                android:layout_width="20dp"
                 android:layout_height="20dp"
                android:src="@drawable/ic_delivery_boy">

            </ImageView>

            <TextView
                android:id="@+id/free_delivery"
                android:layout_width="wrap_content"
                android:layout_weight="0.2"
                 android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Free delivery">

            </TextView>

            <ImageView
                android:id="@+id/timer_delivery"
                android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:src="@drawable/ic_time">

            </ImageView>

            <TextView
                android:id="@+id/deliver_time"
                android:layout_weight="1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="10-15 mins">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
             android:layout_marginBottom="10dp"
             android:orientation="horizontal">


            <TextView
                android:id="@+id/desert_Btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/rectangle_white_grey_border"
                android:backgroundTint="@color/grey_light"
                android:gravity="center"
                android:text="Dessert">

            </TextView>


            <TextView
                android:id="@+id/kuwait_Btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/rectangle_white_grey_border"
                android:backgroundTint="@color/grey_light"
                android:gravity="center"

                android:text="Kuwaiti">

            </TextView>

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"></View>

</LinearLayout>